{
  "name": "iobroker.puppeteer",
  "version": "0.3.0",
  "description": "Headless browser to generate screenshots based on Chrome",
  "author": {
    "name": "Moritz Heusinger",
    "email": "moritz.heusinger@gmail.com"
  },
  "engines": {
    "node": ">=18"
  },
  "homepage": "https://github.com/foxriver76/ioBroker.puppeteer",
  "license": "MIT",
  "keywords": [
    "screenshots",
    "visualization",
    "browser"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:foxriver76/ioBroker.puppeteer.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.1.6",
    "puppeteer": "^23.3.1"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.2",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/eslint-config": "^0.1.6",
    "@iobroker/testing": "^4.1.3",
    "@iobroker/types": "^6.0.11",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.18.22",
    "@types/proxyquire": "^1.3.28",
    "@types/puppeteer": "^7.0.4",
    "@types/sinon": "^10.0.13",
    "@types/sinon-chai": "^3.2.8",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~5.6.2"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint .",
    "translate": "translate-adapter",
    "release": "release-script -p iobroker"
  },
  "bugs": {
    "url": "https://github.com/foxriver76/ioBroker.puppeteer/issues"
  },
  "readmeFilename": "README.md"
}
