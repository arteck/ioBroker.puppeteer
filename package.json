{
  "name": "iobroker.puppeteer",
  "version": "0.2.0",
  "description": "Headless browser to generate screenshots based on Chrome",
  "author": {
    "name": "Moritz Heusinger",
    "email": "moritz.heusinger@gmail.com"
  },
  "homepage": "https://github.com/foxriver76/ioBroker.puppeteer",
  "license": "MIT",
  "keywords": [
    "screenshots",
    "visualization",
    "browser"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:foxriver76/ioBroker.puppeteer.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.0",
    "puppeteer": "^13.7.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@alcalzone/release-script-plugin-iobroker": "^3.5.9",
    "@iobroker/adapter-dev": "^1.0.0",
    "@iobroker/testing": "^2.6.0",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.18",
    "@types/proxyquire": "^1.3.28",
    "@types/puppeteer": "^5.4.6",
    "@types/sinon": "^10.0.11",
    "@types/sinon-chai": "^3.2.8",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^13.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.7.0",
    "typescript": "~4.5.5"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:unit": "mocha test/unit --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script -p iobroker"
  },
  "bugs": {
    "url": "https://github.com/foxriver76/ioBroker.puppeteer/issues"
  },
  "readmeFilename": "README.md"
}
